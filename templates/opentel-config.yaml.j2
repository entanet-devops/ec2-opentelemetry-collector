{% if otel_config_override %}
{{ otel_config_override }}
{% else %}
receivers:
  otlp:
    protocols:
      http:
        endpoint: "localhost:4317"
  prometheus:
    config:
      scrape_configs:
        - job_name: 'node_exporter'
          scrape_interval: 15s
          static_configs:
            - targets:
                - "localhost:9100"
  filelog:
    include:
      - /apps/*/storage/logs/*.log
      - /var/log/nginx/access.log
      - /var/log/nginx/error.log
    start_at: beginning
processors:
  resourcedetection:
    detectors:
      - ec2
    ec2:
      tags:
        - ^.*$
  memory_limiter:
    limit_mib: {{ limit_mib }}
    spike_limit_mib: {{ spike_limit_mib }}
    check_interval: {{ check_interval }}
exporters:
  debug:
    verbosity: {{ otel_debug_level }}
  file:
    path: /var/log/otelcol/collector.log
    rotation:
      max_megabytes: {{ log_rotate_max_megabytes }}
      max_days: {{ log_rotate_max_days }}
      max_backups: {{ log_rotate_max_backups }}
      localtime: {{ log_rotate_localtime }}
  otlphttp:
    endpoint: {{ monitoring_endpoint }}
    retry_on_failure:
      enabled: true
      initial_interval: 5s
      max_interval: 30s
      max_elapsed_time: 300s
    sending_queue:
      enabled: true
      num_consumers: 10
      queue_size: 5000
    timeout: 30s
service:
  pipelines:
    logs:
      receivers:
        - filelog
      processors:
        - memory_limiter
        - resourcedetection
      exporters:
        - otlphttp
    metrics:
      receivers:
        - prometheus
      processors:
        - memory_limiter
        - resourcedetection
      exporters:
        - otlphttp
    traces:
      receivers:
        - otlp
      processors:
        - memory_limiter
        - resourcedetection
      exporters:
        - otlphttp
{% endif %}
